<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F1ECEC"
    android:layout_height="match_parent" >


    <RelativeLayout
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:background="@drawable/nav_bg"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/qrcode"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爱动弹"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textColor="#ffffff"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

    <com.oragee.banners.BannerView
        android:layout_below="@id/action"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/banner"/>

    <com.fanting.aidongtan.widgets.BannerView
        android:layout_alignParentBottom="true"
        android:id="@+id/bannerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:bannerPageAlpha="1.0"
        app:bannerPageMargin="8dp"
        app:bannerPagePercent="0.8"
        app:bannerPageScale="0.7"
        app:bannerAnimScroll="true"
        app:bannerAutoScroll="true"
        app:bannerScrollDuration="4000"
        app:bannerAnimDuration="1500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ad_layout"
        android:layout_height="100dp"
        android:layout_below="@+id/banner"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_rent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="租赁器材"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ad1" />
        <TextView
            android:id="@+id/tv_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="视频课程"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ad2" />
        <TextView
            android:id="@+id/tv_coach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="教练预约"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ad3" />
        <TextView
            android:id="@+id/tv_wiki"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="运动百科"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ad4" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ad_vip"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:background ="@drawable/ad_vip"
        android:layout_below="@+id/ad_layout"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bannerView"
        android:gravity="center"
        android:layout_below="@+id/ad_vip"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/plan_bg" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/recipe_bg" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/data_bg" />


    </LinearLayout>

</RelativeLayout>
