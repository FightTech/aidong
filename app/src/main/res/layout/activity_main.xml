<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<LinearLayout
		android:id="@+id/layout_foot"
		android:layout_width="match_parent"
		android:paddingBottom="10dp"
		android:paddingTop="10dp"
		android:layout_height="60dp"
		android:gravity="center_vertical"
		android:layout_alignParentBottom="true">

		<ImageView
			android:id="@+id/im_sport"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:src="@drawable/im_sport_selector"
			android:clickable="true"
			android:layout_centerHorizontal="true"/>

		<ImageView
			android:id="@+id/im_play"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:src="@drawable/im_play_selector"
			android:clickable="true"
			/>


		<ImageView
			android:id="@+id/im_look"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:src="@drawable/im_look_selector"
			android:clickable="true"
			/>

		<ImageView
			android:id="@+id/im_me"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:src="@drawable/im_me_selector"
			android:clickable="true"
			/>
	</LinearLayout>

	<RelativeLayout
		android:id="@+id/content"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="-2dp"
		android:layout_above="@id/layout_foot"
		android:layout_alignParentStart="true">
	</RelativeLayout>



</RelativeLayout>
